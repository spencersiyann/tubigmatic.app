<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="300px">

        <!-- TubigMatic Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/tubigmaticlogowhitebg"
            android:contentDescription="TubigMatic Logo"
            android:layout_marginBottom="16dp" />

        <!-- Header Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Your Wifi Credential"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <!-- Sub Description -->
        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect your TubigMatic Device through configuring Wifi credential"
            android:textSize="11sp"
            android:textColor="#555555"
            android:layout_marginBottom="24dp"
            android:textAlignment="center" />

        <!-- SSID Field -->
        <EditText
            android:id="@+id/inputSSID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter SSID"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/edittext_background" />

        <!-- Password Field -->
        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_background" />

        <!-- Update Button -->
        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Wi-Fi Credentials"
            android:layout_marginTop="24dp"
            android:backgroundTint="#3E6032"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
